<?xml version="1.0" encoding="utf-8"?>
<com.oscar.writtenexamination.Widget.SquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="1dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/ipcImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"/>

    <View
        android:id="@+id/ipcShade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack95"
        android:visibility="gone"
        tools:visibility="visible"/>

    <CheckBox
        android:id="@+id/ipcCheckbox"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:button="@drawable/ic_check_selector"
        android:clickable="false"
        android:drawablePadding="0dp"
        android:enabled="false"
        android:padding="0dp"
        android:layout_gravity="end"
        android:buttonTint="@color/colorMainTwo"
        android:layout_margin="2dp"
        android:visibility="visible"/>

</com.oscar.writtenexamination.Widget.SquareLayout>